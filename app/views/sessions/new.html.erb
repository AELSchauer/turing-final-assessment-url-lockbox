<h1>Login</h1>

<%= form_for :login, url: login_path do |f| %>
  <% @errors.each do |error_message| %>
    <div><p><%= error_message %>.</p></div>
  <% end %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.submit 'Submit' %>
<% end %>
<br>
<p>Don't have an account? <%= link_to "Sign up here!", signup_path  %></p>