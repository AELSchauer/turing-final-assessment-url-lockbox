<h1>Signup</h1>

<%= form_for @user, url: signup_path do |f| %>
  <% @user.errors.full_messages.each do |error_message| %>
    <div><p><%= error_message %>.</p></div>
  <% end %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit 'Submit' %>
<% end %>
